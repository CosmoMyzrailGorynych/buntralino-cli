{
  "$schema": "https://raw.githubusercontent.com/neutralinojs/neutralinojs/main/schemas/neutralino.config.schema.json",

  "applicationId": "rocks.buntralino.sample",
  "version": "1.0.0",
  "applicationName": "Buntralino sample app",
  "applicationIcon": "app/icons/Buntralino.png",
  "author": "Cosmo Myzrail Gorynych",
  "description": "A sample application for Buntralino",

  "defaultMode": "window",
  "enableServer": true,
  "enableNativeAPI": true,
  "tokenSecurity": "one-time",
  "url": "/",
  "port": 0,
  "documentRoot": "/app/",
  "logging": {
    "enabled": true,
    "writeToLogFile": true
  },
  "nativeAllowList": [
    "events.*",
    "app.*",
    "os.*",
    "debug.log"
  ],
  "modes": {
    "window": {
      "title": "Buntralino sample app",
      "width": 500,
      "height": 650,
      "minWidth": 400,
      "minHeight": 200,
      "center": true,
      "fullScreen": false,
      "alwaysOnTop": false,
      "icon": "/app/icons/Buntralino.png",
      "borderless": false,
      "maximize": false,
      "hidden": false,
      "resizable": true,
      "exitProcessOnClose": true
    }
  },
  "cli": {
    "binaryName": "buntralino",
    "resourcesPath": "/app/",
    "extensionsPath": "/extensions/",
    "distributionPath": "/build/neutralino",
    "clientLibrary": "/app/js/neutralino.js",
    "binaryVersion": "5.5.0",
    "clientVersion": "5.5.0"
  }
}